<Window x:Class="OfficeEquip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:OfficeEquip"
        mc:Ignorable="d"
        Title="MainWindow" Height="950" Width="1500" MinHeight="650" MinWidth="1000"
        
        Background="Transparent" ResizeMode="NoResize" 
        AllowsTransparency="True" WindowStyle="None" WindowStartupLocation="CenterScreen">

    <Border Background="White" CornerRadius="15" BorderThickness="2" BorderBrush="Gray" 
            Padding="20" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Текст-->
            <TextBlock Text="Учет офисного оборудования" Grid.Row="0" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="48" Margin="20" FontWeight="SemiBold" Foreground="Black" />

            <!--Строка поиска-->
            <Grid Margin="30 0 0 0" Width="400" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="1" >
                <TextBlock  Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6"
        IsHitTestVisible="False" Panel.ZIndex="1" 
        Visibility="{Binding ElementName=txtSearch, Path=Text.IsEmpty}"/>

                <TextBox x:Name="SearchTextBox"  Margin="0 0 0 0" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Icon:PackIconMaterial Kind="Magnify" Width="15" Height="15" Foreground="#b0b9c6"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 0 15 0"/>
            </Grid>

            <!--StackPanel TextBox-->
            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="3" Margin="10 0" HorizontalAlignment="Center" >
                <StackPanel Margin="10" >
                    <Label Content="Name"/>
                    <TextBox x:Name="NameTextBox" MinWidth="150" Text="{Binding SelectedEquipment.Name, UpdateSourceTrigger=PropertyChanged}"  />
                </StackPanel>
                <StackPanel  Margin="10">
                    <Label Content="Type"/>
                    <ComboBox x:Name="TypeComboBox" MinWidth="150" ItemsSource="{Binding EquipmentTypes}" SelectedValue="{Binding SelectedEquipment.IdType}"
          DisplayMemberPath="TypeName" SelectedValuePath="IdType" />
                </StackPanel>
                <StackPanel  Margin="10" >
                    <Label Content="Status"/>
                    <ComboBox x:Name="StatusComboBox" MinWidth="150" ItemsSource="{Binding EquipmentStatuses}" SelectedValue="{Binding SelectedEquipment.IdStatus}"
          DisplayMemberPath="StatusName" SelectedValuePath="IdStatus" />
                </StackPanel>

                <Button x:Name="AddButton" MinWidth="150" Margin="10" Command="{Binding AddCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Plus" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                        <TextBlock Text="Добавить" />
                    </StackPanel>
                </Button>
                <Button x:Name="EditButton" MinWidth="150" Margin="10" Command="{Binding EditCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="PencilOutline" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                        <TextBlock Text="Изменить"  />
                    </StackPanel>
                </Button>
                <Button x:Name="ResetButton" MinWidth="150" Margin="10" Command="{Binding ResetCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Refresh" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                        <TextBlock Text="Сбросить"  />
                    </StackPanel>
                </Button>
                <Button x:Name="DeleteButton" MinWidth="150" Margin="10" Command="{Binding DeleteCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Delete" VerticalAlignment="Center" Width="11" Height="11" Margin="0 1 8 0" />
                        <TextBlock Text="Удалить"  />
                    </StackPanel>
                </Button>
            </StackPanel>


            <!--DataGrid Оборудования-->
            <DataGrid x:Name="EquipmentDataGrid" Grid.Row="3" Grid.Column="1" Margin="40" ItemsSource="{Binding Equipments}" SelectedItem="{Binding SelectedEquipment}"
          AutoGenerateColumns="False" MinWidth="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="#" Binding="{Binding IdEquipment}" Width="Auto" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Тип" Binding="{Binding TypeName}" Width="*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding StatusName}" Width="*" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Window>